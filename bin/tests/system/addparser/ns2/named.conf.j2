include "../../_common/rndc.key";

controls {
	inet 10.53.0.2 port @CONTROLPORT@ allow { any; } keys { rndc_key; };
};

options {
	query-source address 10.53.0.2;
	notify-source 10.53.0.2;
	transfer-source 10.53.0.2;
	port @PORT@;
	allow-new-zones yes;
	pid-file "named.pid";
	listen-on { 10.53.0.2; };
	listen-on port @EXTRAPORT1@ { 10.53.0.2; };
	listen-on-v6 { none; };
	notify no;
	notify-delay 0;
	recursion no;
	allow-transfer { any; };
	dnssec-validation no;
};

zone "catalog2.example" {
	type primary;
	file "catalog2.example.db";
	allow-transfer { any; };
	allow-update { any; };
	also-notify { 10.53.0.4; };
	notify explicit;
};
