{% set ns3ttl = ns3ttl | default(555) %}
{% set ns3ip = ns3ip | default("10.53.33.33") %}
{% set extrarr = extrarr | default(False) %}

$TTL 300	; 5 minutes
ghost.example.		IN SOA	mname1. . (
				2000042407 ; serial
				20	   ; refresh (20 seconds)
				20	   ; retry (20 seconds)
				1814400	   ; expire (3 weeks)
				3600	   ; minimum (1 hour)
				)
			NS	ns3

; ns3 is actually different in the child, TTL of 555 and different IP.
ns3	@ns3ttl@	A	@ns3ip@

bar			A	10.53.0.44
baz			A	10.53.0.45
{% if extrarr %}
gee			A	10.53.0.66
{% endif %}
