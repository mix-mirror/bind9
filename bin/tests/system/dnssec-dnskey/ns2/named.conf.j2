// NS2

options {
	query-source address 10.53.0.2;
	notify-source 10.53.0.2;
	transfer-source 10.53.0.2;
	port @PORT@;
	pid-file "named.pid";
	listen-on { 10.53.0.2; };
	listen-on-v6 { none; };
	recursion no;
	dnssec-validation yes;
};

controls {
	inet 10.53.0.2 port @CONTROLPORT@ allow { any; } keys { rndc_key; };
};

include "../../_common/rndc.key";

include "trusted.conf";

{% for zone in zones %}
{% if zone.ns.name == "ns2" %}
zone "@zone.name@" {
	type @zone.type@;
	file "@zone.filename@";
};
{% endif %}
{% endfor %}
